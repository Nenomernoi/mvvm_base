<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/rest">

        <Constraint
            android:id="@+id/rlImage"
            android:layout_width="@dimen/row_breed_border_image_size"
            android:layout_height="@dimen/row_breed_border_image_size"
            android:layout_marginTop="0dp"
            android:alpha="0.0"
            android:padding="@dimen/root_separate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </ConstraintSet>


    <ConstraintSet android:id="@+id/start">


        <Constraint
            android:id="@+id/rlImage"
            android:layout_width="@dimen/row_breed_border_image_size"
            android:layout_height="@dimen/row_breed_border_image_size"
            android:layout_marginTop="0dp"
            android:alpha="1.0"
            android:padding="@dimen/root_separate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </ConstraintSet>

    <ConstraintSet android:id="@+id/click">

        <Constraint
            android:id="@+id/rlImage"
            android:layout_width="0dp"
            android:layout_height="@dimen/breed_image_size"
            android:layout_marginTop="0dp"
            android:alpha="1.0"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/btnFavorite"
            android:layout_width="@dimen/breed_favorite_size"
            android:layout_height="@dimen/breed_favorite_size"
            android:background="@drawable/bg_circle"
            android:padding="@dimen/breed_favorite_padding"
            android:src="@drawable/ic_favorite_border"
            app:layout_constraintBottom_toBottomOf="@id/rlImage"
            app:layout_constraintEnd_toEndOf="@id/rlImage" />

        <Constraint
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/root_padding"
            android:layout_marginLeft="@dimen/root_padding"
            android:layout_marginBottom="@dimen/root_status_bar"
            app:layout_constraintBottom_toBottomOf="@id/rlImage"
            app:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                app:attributeName="textColor"
                app:customColorValue="@color/white" />
            <CustomAttribute
                app:attributeName="textSize"
                app:customDimension="@dimen/breed_item_title_text_size" />
        </Constraint>

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/start"
        app:constraintSetStart="@+id/rest"
        app:duration="10" />

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/click"
        app:constraintSetStart="@+id/start"
        app:duration="1000" />


</MotionScene>