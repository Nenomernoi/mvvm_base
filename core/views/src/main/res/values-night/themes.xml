<resources>

  <!-- Base application theme. -->
  <style name="Base.DayNight" parent="Theme.Base.Dark" />

  <style name="Theme.Base.Dark" parent="Theme.Base">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/base_blue_200</item>
    <item name="colorPrimaryVariant">@color/base_blue_300</item>
    <item name="colorOnPrimary">@color/base_black_900</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/base_orange_300</item>
    <item name="colorSecondaryVariant">@color/base_orange_300</item>
    <item name="colorOnSecondary">@color/base_black_900</item>

    <item name="android:colorBackground">@color/base_black_900</item>
    <item name="colorSurface">@color/base_black_800</item>
    <item name="colorError">@color/base_red_200</item>

    <item name="colorPrimarySurfaceVariant">?attr/colorSurface</item>

    <item name="colorOnBackground">@color/base_white_50</item>
    <item name="colorOnSurface">@color/base_white_50</item>
    <item name="colorOnError">@color/base_black_900</item>

    <item name="colorControlHighlight">@color/ripple_material_dark</item>
  </style>
</resources>